{% extends "base.html.twig" %}
 {{ include('customer/nav.twig') }}

{% block body %}

 {{ include('customer/nav.twig') }}
    <div>
        <p>Hi! {{ user.name }}</p>
    </div>

    <div>
        <table>
            <tr>    
                <td> email id: </td>
                <td> {{ user.email }} </td>
            </tr>
            <tr>    
                <td> phone no:<small id='phone_no_edit'>edit</small> </td>
                <td> 
                    <span id='phone_no'>
                        {%  if user.phoneNo %}            
                            {{ user.phoneNo }}
                        {% else %}
                            <a class="waves-effect waves-light btn modal-trigger" href="#modal1">click to add</a>
                        {% endif %}
                    </span>
                 </td>
            </tr>
            <tr>
                
                <td colspan='2'>
                   {% if userAddress %}
                    <div class="row">
                        <div class="col s12">
                            <div class="card blue-grey darken-1">
                                <div class="card-content white-text">
                                    <span class="card-title">Address <small>&nbsp;&nbsp;<a href="{{ path('customer_add_address') }}"> Add Address </a></small> </span>
                                    
                                        <table>
                                            <tr>    
                                                {# <td> Name </td> #}
                                                <td> address line1 </td>
                                                <td> address line2 </td>
                                                <td> state </td>
                                                <td> pincode </td>
                                            </tr>
                   
                                            {% for address in userAddress %}
                                                <tr>
                                                    {# <td>full name</td> #}
                                                    <td>{{ address.addressLine1 }}</td>
                                                    <td>{{ address.addressLine2 }}</td>
                                                    <td>{{ address.state }}</td>
                                                    <td>{{ address.pincode }}</td>
                                                </tr>   
                                            {%  endfor  %}
                                        </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% else %}
                        no address <a href="{{ path('customer_add_address') }}"> Add Address </a>
                    {% endif %}<br/>
                    
                </td>
            </tr>
        </table>
    </div>









    <!-- Modal Structure -->
  <div id="modal1" class="modal modal-fixed-footer">
    <div class="modal-content">
      <h4>Hi {{ user.name }}</h4>
      <form>
        <label>Phone no.</label>
        <input type='text' name="phone_no" id="phone_no_text"/>
      </form>
    </div>
    <div class="modal-footer">
      <a id='modal-agree' class="modal-close waves-effect waves-green btn-flat">Agree</a>
    </div>
  </div>

    
          
{% endblock %}

{% block javascripts %}
<script>
  $(document).ready(function(){
    $('.modal').modal();
   
    $('#modal1,#phone_no_edit').click(function(){
        $('#modal1').modal('open');
    });
    $('#modal-agree').click(function(){
        $('#modal1').modal({
            dismissible : false
        });
        //$('#phone_no').text($('#phone_no_text').val());

        $.ajax({
            url: '/seller/update',  
            type: 'POST',   
            dataType: 'json',  
            data: {
                id: {{ user.id }},
                phoneNo: $('#phone_no_text').val()
            },
            success: ()=>{
                alert('ok');
            },
            error : ()=>{
                alert("error");
            }
        })
    });

  });
</script>
{% endblock %}