{% extends "base.html.twig" %}
{% block body %}


<div class='row'>
    <div class='col s12'>
{% for product in products %}   
    
        <div class="card blue-grey darken-2">
            <div class="card-content white-text">
                <span class="card-title">{{ product.name}}</span>
                <img src="{{ asset('uploads/photo/' ~ product.photo) }}" height="200px"/>
                <span> {{ product.description }} </span>
                <a href="/customer/order/{{product.id}}"> BUY </a>
            </div>
        <div>
        <br/>
{% endfor %}
    </div>
</div>

{% endblock %}

{% block stylesheets %}

    <style>
       a{
            color: white;
            background: darkgreen;
            border: 0;
            padding: 1rem;
            border-radius: 2rem;
            position: absolute;
            top: 10%;

        }
        a:hover{
            color: darkgreen;
            background:white;
        }
    </style>
{% endblock %}