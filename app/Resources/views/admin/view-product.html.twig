{% extends "base.html.twig" %}

{% block body %}
{{ include('admin/nav.twig') }}
<pre>
    {{ dump(products) }} 
</pre> 

<table>

    <tr>
        <td> S.no. </td>
        <td> product </td>
        <td> Description </td>
        <td> Price </td>
        <td> photo </td>
    </tr>
    {% set i = 0 %}
    {% for product in products %}
    {% set i = i+1 %}
        <tr>
            <td> {{ i }} </td>
            <td> {{ product.name }} </td>
            <td> {{ product.description }} </td>
            <td> {{ product.price }} </td>
            <td><img src="{{ asset('uploads/photo/' ~ product.photo) }}" height="100px"/>  </td>
            <td> <a href="/admin/{{ product.id }}/product">Edit</a> </td>
            
        </tr>
    {% endfor %}
</table>


{% endblock %}